user {{ nginx_user }};
worker_processes auto;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

{% if nginx_brotli_enabled %}
load_module modules/ngx_http_brotli_filter_module.so;
load_module modules/ngx_http_brotli_static_module.so;
{% endif %}

events {
    worker_connections 1024; # `ulimit -nÂ´
    multi_accept on;
}

http {
    ##
    # Basic Settings
    ##
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    server_tokens off;
    client_max_body_size 512m;
    reset_timedout_connection on;
    fastcgi_read_timeout 600s;

    # server_names_hash_bucket_size 64; server_name_in_redirect off;
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    ##
    # SSL Settings
    ##
    include /etc/nginx/global/ssl.conf;

    ##
    # Logging Settings
    ##
    access_log /var/log/nginx/access.log combined buffer=256k flush=10s;
    error_log /var/log/nginx/error.log;

    ##
    # Gzip Settings
    ##
    include /etc/nginx/global/gzip.conf;

    {% if nginx_brotli_enabled %}
    ##
    # Brotli support
    ##
    include /etc/nginx/global/brotli.conf;
    {% endif %}

    ##
    # Proxy Settings
    ##
    include /etc/nginx/global/proxy.conf;

    ##
    # Virtual Host Configs
    ##
    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;
}
